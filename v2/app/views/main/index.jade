extends /layouts/application.jade

block title
  title main#index

block content-wide
  .call-to-action
    .container
      // 1440 x 780
      div(style='width: 100%; padding-bottom: 54.16%; position: relative;')
        svg(style='width: 100%; height: 100%; position: absolute;')
          g(transform="scale(0.5 0.5)")
        .call-to-action-text
          img(src='/app/images/call-to-action-text.svg')
        .call-to-action-buttons
          a.btn.btn-lg.btn-primary(href='/forum/') 
            span.fa.fa-comments
            |  Discussion
          a.btn.btn-lg.btn-primary.float-right(href='/downloads')
            span.fa.fa-download
            |  Get it now
  .container
    h1 Announcements
    each n in news
      h3= n.title
      .news-body
        != n.body

block script
  script.
    var rescale_svg = function() {
      var width = parseInt(d3.select('svg').style('width'), 10);
      d3.select('svg g').attr('transform', 'scale(' + width / 1440 + ')');
    };
    rescale_svg();
    d3.select(window).on('resize', rescale_svg);

    var width = 1440;
    var height = 780;
    d3.csv('/app/world.csv', function(d) {
      return {x: +d.x, y: +d.y};
    }, function(data) {
      d3.select('svg g')
        .selectAll('circle')
        .data(data)
        .enter()
        .append('circle')
        .attr({
            cx: width / 2,
            cy: height / 3,
            r: 0
          })
        .transition()
        .duration(function() {return Math.random() * 4300 + 700;})
        .delay(function() {return Math.random() * 2000;})
        .attr({
            cx: function(d) {return d.x * 10 + 20;},
            cy: function(d) {return d.y * 10 + 50;},
            r: 4,
            fill: '#006481'
          });
    });
